{
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Spec\\": "spec/"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "kahlan/kahlan": "4.0.x-dev",
        "kahlan/extra-matcher": "dev-master",
        "satooshi/php-coveralls": "^1.0"
    },
    "suggest": {
        "ext-xdebug": "Xdebug extension to allow to get coverage report",
        "ext-phpdbg": "PHPDBG extension to allow to get coverage report"
    }
}
